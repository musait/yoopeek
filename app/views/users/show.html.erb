
<!-- Recent Blog Posts / End -->
<div class="container">
	<div class="row">
		<!-- Content -->
		<div class="col-xl-8 col-lg-8 content-right-offset">
			<!-- Page Content -->
			<div class="single-page-section">
				<h3 class="margin-bottom-25"> <%= t(".about", pro: current_user.full_name) %></h3>
				<p> <%= current_user.description %></p>
			</div>
			<div class="col-xl-12">
				<div class="blog-carousel">
					<% current_user.portfolios.each do |portfolio| %>
						<%= link_to portfolio_path(id: portfolio.id), class:"blog-compact-item-container" do %>
							<img src=" <%= rails_blob_url(portfolio.picture.first)%>" style="width:300px;height:auto" alt="">
						<% end %>
					<% end %>
				</div>
			</div>
			<!-- Boxed List -->
			<div class="boxed-list margin-bottom-60">
				<div class="boxed-list-headline">
					<h3><i class="icon-material-outline-thumb-up"></i> <%= t('.history_and_reviews') %></h3>
				</div>
				<ul class="boxed-list-ul">
					<li>
						<div class="boxed-list-item">
							<!-- Content -->
							<div class="item-content">
								<h4>Photographie Bar mitsvah</h4>
								<div class="item-details margin-top-10">
									<div class="star-rating" data-rating="4.0"></div>
									<div class="detail-item"><i class="icon-material-outline-date-range"></i> Aout 2019</div>
								</div>
								<div class="item-description">
									<p>Lorem ipsum dolor sit amet, consectetur adipiscing elit. Donec semper arcu non nibh sodales pharetra.</p>
								</div>
							</div>
						</div>
					</li>
					<li>
						<div class="boxed-list-item">
							<!-- Content -->
							<div class="item-content">
								<h4>Photographie Entreprise</h4>
								<div class="item-details margin-top-10">
									<div class="star-rating" data-rating="5.0"></div>
									<div class="detail-item"><i class="icon-material-outline-date-range"></i> Aout 2019</div>
								</div>
								<div class="item-description">
									<p>Lorem ipsum dolor sit amet, consectetur adipiscing elit. Donec semper arcu non nibh sodales pharetra.</p>
								</div>
							</div>
						</div>
					</li>
					<li>
						<div class="boxed-list-item">
							<!-- Content -->
							<div class="item-content">
								<h4>Photographie Marriage</h4>
								<div class="item-details margin-top-10">
									<div class="star-rating" data-rating="2.5"></div>
									<div class="detail-item"><i class="icon-material-outline-date-range"></i> Aout 2019</div>
								</div>
								<div class="item-description">
									<p>Lorem ipsum dolor sit amet, consectetur adipiscing elit. Donec semper arcu non nibh sodales pharetra.</p>
								</div>
							</div>
						</div>
					</li>
					<li>
						<div class="boxed-list-item">
							<!-- Content -->
							<div class="item-content">
								<h4>Photographie Baptème</h4>
								<div class="item-details margin-top-10">
									<div class="star-rating" data-rating="0"></div>
									<div class="detail-item"><i class="icon-material-outline-date-range"></i> Aout 2019</div>
								</div>
								<div class="item-description">
									<p>Lorem ipsum dolor sit amet, consectetur adipiscing elit. Donec semper arcu non nibh sodales pharetra.</p>
								</div>
							</div>
						</div>
					</li>
				</ul>

				<!-- Pagination -->
				<div class="clearfix"></div>
				<div class="pagination-container margin-top-40 margin-bottom-10">
					<%= paginate @jobs if @jobs.present?%>
				</div>
				<div class="clearfix"></div>
				<!-- Pagination / End -->

			</div>
			<!-- Boxed List / End -->
		</div>
		<!-- Sidebar -->
		<div class="col-xl-4 col-lg-4" style="text-align:center">
			<div class="sidebar-container">

				<!-- Profile Overview -->
				<div class="profile-overview">
					<div class="overview-item"><strong>100€</strong><span>	<%= t('.hour_rate') %></span></div>
					<div class="overview-item"><strong>10</strong><span>	<%= t('.job_realized') %></span></div>
				</div>

				<a href="#" class="apply-now-button margin-bottom-50"> <%= t('.send_mp') %><i class="icon-material-outline-arrow-right-alt"></i></a>

				<!-- Freelancer Indicators -->


				<!-- Widget -->
				<div class="sidebar-widget">
					<h3> <%= t('.social_medias') %></h3>
					<div class="freelancer-socials margin-top-25">
						<ul>
							<li><a href="<%= current_user.facebook_profile if current_user.facebook_profile %>" title="Facebook" data-tippy-placement="top"><i class="icon-brand-facebook"></i></a></li>
							<li><a href="<%= current_user.twitter_profile if current_user.twitter_profile %>" title="Twitter" data-tippy-placement="top"><i class="icon-brand-twitter"></i></a></li>
							<li><a href="<%= current_user.instagram_profile if current_user.instagram_profile %>" title="Instagram" data-tippy-placement="top"><i class="icon-brand-instagram"></i></a></li>
							<li><a href="<%= current_user.pinterest_profile if current_user.pinterest_profile %>" title="Pinterest" data-tippy-placement="top"><i class="icon-brand-pinterest"></i></a></li>
						</ul>
					</div>
				</div>

				<!-- Widget -->
				<div class="sidebar-widget">
					<h3> <%= t('.skills') %></h3>
					<div class="task-tags">
						<span>Photographie</span>
						<span>Portrait</span>
						<span>Marriage</span>
					</div>
				</div>

				<!-- Sidebar Widget -->
				<div class="sidebar-widget">
					<h3>Ajouter au favoris</h3>

					<!-- Bookmark Button -->
					<button class="bookmark-button margin-bottom-25">
						<span class="bookmark-icon"></span>
						<span class="bookmark-text">Bookmark</span>
						<span class="bookmarked-text">Bookmarked</span>
					</button>
				</div>

			</div>
		</div>
	</div>
</div>


