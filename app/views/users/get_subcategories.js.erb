$('#subcategory_select').html("<%= j select(:user,:subcategory_ids,  @subcategories.collect {|p| [ p.name, p.id ] },{include_hidden: true},{multiple: true,class:'selectpicker',id:'subcategory_id'}) %>");

$(document).ready(function(){
  $('#profession_id').selectpicker();
});
$('#subcategory_id').selectpicker({
  title : 'Choisis ta/tes spécialité(s)',
  noneSelectedText: ''
});

$(document).ready(function () {
  $("#subcategory_id").on("change", function (e) {
        if ($(this)[0].length) {
          $.ajax({
          type: "POST",
          url: "/users/new_subcategory",
          data: {subcategory: $(this)[0].value}
      });
    }
  });
});
