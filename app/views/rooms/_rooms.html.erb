<div class="messages-inbox">
  <div class="messages-headline">
    <div class="input-with-icon">
      <input id="autocomplete-input" type="text" placeholder="Search">
      <i class="icon-material-outline-search"></i>
    </div>
  </div>

  <ul>
    <% @rooms.each do |room| %>
      <li class="active-message" id="selectRoom">
        <%= link_to room_path(room), method: :get,remote: true, class: 'nav-link room-nav-link' do %>
          <div class="message-avatar"><i class="status-icon status-online"></i><img src="/theme/user/hireo/images/user-avatar-small-03.jpg" alt="" /></div>
          <div class="message-by">
            <div class="message-by-headline">
              <h5><% if current_user.id == room.author.id  %>
                <h4><%= room.receiver.full_name %></h4>
              <% else %>
                <h4><%= room.author.full_name %></h4>
              <% end %></h5>
              <span>4 hours ago</span>
            </div>
            <p><%= room.room_messages.last.message if room.room_messages.present? %></p>
          </div>
        <% end %>
      </li>
    <% end %>
  </ul>
</div>
