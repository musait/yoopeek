<div class="messages-inbox">
  <div class="messages-headline">
    <div class="input-with-icon">
      <input id="autocomplete-input" type="text" placeholder="Search">
      <i class="icon-material-outline-search"></i>
    </div>
  </div>

  <ul>
    <% @rooms.each do |room| %>
    <% @other_user = room.job.customer.eql?(current_user) ? current_user : room.job.customer %>

      <li class="active-message" id="selectRoom">
        <%= link_to room_path(room), method: :get,remote: true, id: "room-#{room.id}", class: 'nav-link room-nav-link', "data-channel-subscribe" => "room", "data-room-id" => room.id, "data-user-id" => current_user.id do %>
          <div class="message-avatar"><i class="status-icon status-online"></i><img src="<%= @other_user.avatar_url %>" alt="" /></div>
          <div class="message-by">
            <div class="message-by-headline">
              <h5>
                <h4><%=  @other_user.full_name%></h4>
              </h5>
              <span>4 hours ago</span>
            </div>
            <p><%= room.room_messages.last.message if room.room_messages.present? %></p>
          </div>
        <% end %>
      </li>
    <% end %>
  </ul>
</div>
