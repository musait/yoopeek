<table class="table table-hover dataTable table-striped w-full" id="users-datatable">
  <thead>
    <tr>
      <th>Prix</th>
      <th>Crédits</th>
      <th>Réduction</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @credits_offers.each do |credits_offer| %>
      <tr>
        <td><%= currency_formated credits_offer.price %></td>
        <td><%= float_formated credits_offer.credits %></td>
        <td><%= float_formated credits_offer.reduction %></td>
        <td class="actions">
          <%= link_to edit_admin_credits_offer_path(id: credits_offer.id),method: :get,class:"btn btn-sm btn-icon btn-pure btn-default on-default edit-row" do %>
            <i class="icon wb-edit" aria-hidden="true"></i>
          <% end %>
          <%= link_to admin_credits_offer_path(id: credits_offer.id), method: :delete, class:"btn btn-sm btn-icon btn-pure btn-default on-default remove-row" do%>
            <i class="icon wb-trash" aria-hidden="true"></i>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
