<%= form_with(model: [:admin, @room_message],class:"modal-content", local: true) do |form| %>
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
      <span aria-hidden="true">×</span>
    </button>
    <h4 class="modal-title" id="exampleFormModalLabel">Edition d'un message</h4>
  </div>
  <div class="modal-body">
    <div class="row">
      <div class="col-xl-12 form-group">
        <h5>Message</h5>
        <div>
          <%= @room_message.message %>
        </div>
      </div>
      <div class="form-group">
        <div class="checkbox md-form-group float-label col-sm-12 m-b">
          <label class="md-check">
            <%= form.check_box :is_valid %><i class="danger"></i> message valide?
          </label>
        </div>
      </div>
      <div class="col-xl-12 form-group">
        <h5>Pourquoi le message est invalide</h5>
        <%= form.text_field :unvalid_reason,class:"form-control" %>
      </div>
      <div class="col-xl-12 form-group">
        <h5>Pourquoi le message a été capturer</h5>
        <%= form.text_field :catched_reason,class:"form-control" %>
      </div>

      <div class="col-md-12 float-right">
        <%= form.submit "Enregistrer", class:"btn btn-primary btn-outline"%>
      </div>
    </div>
  </div>
<%end%>
