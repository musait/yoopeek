  <div class="modal-dialog modal-simple">
    <%= form_with(model: [:admin,@format_delivery] ,class:"modal-content")  do |form| %>
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">Ã—</span>
        </button>
        <h4 class="modal-title" id="exampleFormModalLabel">Edition d'un format de livraison</h4>
