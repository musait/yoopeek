<table class="table table-hover dataTable table-striped w-full" data-plugin="dataTable">
  <thead>
    <tr>
      <th>Nom</th>
      <th>Sous-categories attachés</th>
      <th>Tags attachés</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%=category.name%></td>

        <td><%= category.subcategories.collect(&:name).join(" , ") %></td>
        <td><%= category.tags.collect(&:name).join(" , ") %></td>
        <td class="actions">
          <%= link_to edit_admin_category_path(id: category.id),{:remote => true, 'data-toggle' =>  "modal", 'data-target' => '#editCategory', class:"btn btn-sm btn-icon btn-pure btn-default on-default edit-row"} do %>
            <i class="icon wb-edit" aria-hidden="true"></i>
          <% end %>
          <%= link_to admin_category_path(id: category.id), method: :delete, class:"btn btn-sm btn-icon btn-pure btn-default on-default remove-row" do%>
            <i class="icon wb-trash" aria-hidden="true"></i>
          <% end %>
        </td>
      </tr>
    <% end %>
    </tbody>
</table>
