$(".tag_select").select2({
  theme: "bootstrap",
  tags: true,
  tokenSeparators: [",", " "]
    }).on("change", function (e) {
      var isNew = $(this).find('[data-select2-tag="true"]');
      if (isNew.length) {
        $.ajax({
            type: "POST",
            url: "/admin/new_tag",
            data: {tag: isNew.val()},
            success: function(data){ // success est toujours en place, bien s√ªr !
              isNew.val(data.id)
            },
        });
      }
})

