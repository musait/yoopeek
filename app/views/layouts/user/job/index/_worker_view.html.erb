
		<!-- Spacer -->
		<div class="margin-top-90"></div>
		<!-- Spacer / End-->

		<!-- Page Content
		================================================== -->
		<div class="container">
			<div class="row">
				<div class="col-xl-12">
					<h3 class="page-title"> <%= t('.available_jobs') %> </h3>
					<div class="row justify-content-end">
						<div class="col-xl-3">
							<%= form_tag("filter", :remote => true) do %>
                <%= t('.filter_by') %>
			          <%= select_tag 'filter',options_from_collection_for_select(Category.all, 'id', 'name'), prompt: "Select something", class:"custom-select", id:"category_filter" %>
			        <% end %>
						</div>
					</div>
					<div class="listings-container margin-top-35" id="job_list">
						<%= render "job_list" %>
					</div>
				</div>
			</div>
		</div>
		<!-- Pagination -->
		<div class="clearfix"></div>
		<div class="row" style="margin-top:50px">
			<div class="col-md-12">
				<!-- Pagination -->
				<div class="pagination-container margin-top-30 margin-bottom-60">
					<%= paginate @jobs%>
				</div>
			</div>
		</div>
		<!-- Pagination / End -->
		<%= content_for :body_script do %>
			<script type="text/javascript">
				$(document).ready(function(){
					$("#category_filter").bind('change', function() {
						$.ajax({
							url: '/jobs',
							type: "GET",
							dataType: "script",
							data: {"filter": $("#category_filter").val()}
						});
					});
				});
			</script>
		<% end %>
