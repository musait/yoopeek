<header id="header-container" class="fullwidth">

	<!-- Header -->
	<div id="header">
		<div class="container">

			<!-- Left Side Content -->
			<div class="left-side">

				<!-- Logo -->
				<div id="logo">
					<%= link_to root_path(locale: :fr) do %>
					<%= image_tag "logo.svg" %>
					<%end%>
				</div>

				<!-- Main Navigation -->
				<nav id="navigation">
					<ul id="responsive">
						<% if user_signed_in?%>
							<% if current_user.is_worker %>
								<li><a href="#">Pro Missions</a></li>
								<!-- <li><a href="/theme/user/hireo/pro-missions-index.html">Pro Missions</a></li> -->
								<li><%= link_to I18n.t('.header.available_jobs'), jobs_path(locale: :fr) %></li>
								<li><%= link_to I18n.t('.header.rooms'), rooms_path(locale: :fr), method: :get %></li>
								<li><a href="#">Pro Paiements</a></li>
								<!-- <li><a href="/theme/user/hireo/pro-paiements-index.html">Pro Paiements</a></li> -->
							<% else %>
								<li><%= link_to I18n.t('.header.create_job'), new_job_path,method: :get, class:"button ripple-effect", style:"color: white"%></li>
								<li><%= link_to I18n.t('.header.your_job'), jobs_path(locale: :fr),method: :get %></li>
								<li><%= link_to I18n.t('.header.rooms'), rooms_path(locale: :fr),method: :get %></li>
								<li><a href="#">Favoris</a></li>
								<!-- <li><a href="/theme/user/hireo/user-bookmarks-index.html">Favoris</a></li> -->
							<% end %>
						<% end %>
					</ul>
				</nav>
				<div class="clearfix"></div>
				<!-- Main Navigation / End -->

			</div>
			<!-- Left Side Content / End -->


			<!-- Right Side Content / End -->
			<div class="right-side" style="top: 0">

				<% if user_signed_in? %>
					<!--  User Notifications -->
					<div class="header-widget hide-on-mobile">

						<!-- Notifications -->
						<div class="header-notifications">

							<!-- Trigger -->
							<div class="header-notifications-trigger">
								<%= link_to root_path do %>
									<i class="icon-feather-bell"></i><span><%= @notifications_count %></span></a>
								<% end %>
							</div>

							<!-- Dropdown -->
							<div class="header-notifications-dropdown">

								<div class="header-notifications-headline">
									<h4>Notifications</h4>
									<button class="mark-as-read ripple-effect-dark" title="Mark all as read" data-tippy-placement="left">
										<i class="icon-feather-check-square"></i>
									</button>
								</div>

								<div class="header-notifications-content">
									<div class="header-notifications-scroll" data-simplebar>
										<ul>
											<!-- Notification -->
											<% @notifications.each do |notification| %>
												<li class="notifications-not-read">
													<%= link_to notification.url do %>
														<span class="notification-icon"><i class="icon-material-outline-group"></i></span>
														<span class="notification-text">
															<%= raw notification.message_translate %>
														</span>
													<% end %>
												</li>
											<% end %>


											<!-- Notification -->
											<!-- <li>
												<a href="dashboard-manage-bidders.html">
													<span class="notification-icon"><i class=" icon-material-outline-gavel"></i></span>
													<span class="notification-text">
														<strong>Gilbert Allanis</strong> placed a bid on your <span class="color">iOS App Development</span> project
													</span>
												</a>
											</li> -->
										</ul>
									</div>
								</div>

							</div>

						</div>

						<!-- Messages -->
						<div class="header-notifications">
							<div class="header-notifications-trigger">
								<a href="#"><i class="icon-feather-mail"></i><span>3</span></a>
							</div>

							<!-- Dropdown -->
							<div class="header-notifications-dropdown">

								<div class="header-notifications-headline">
									<h4>Messages</h4>
									<button class="mark-as-read ripple-effect-dark" title="Mark all as read" data-tippy-placement="left">
										<i class="icon-feather-check-square"></i>
									</button>
								</div>

								<div class="header-notifications-content">
									<div class="header-notifications-scroll" data-simplebar>
										<ul>
											<!-- Notification -->
											<li class="notifications-not-read">
												<a href="#">
												<!-- <a href="dashboard-messages.html"> -->
													<span class="notification-avatar status-online"><img src="/theme/user/hireo/images/user-avatar-small-03.jpg" alt=""></span>
													<div class="notification-text">
														<strong>David Peterson</strong>
														<p class="notification-msg-text">Thanks for reaching out. I'm quite busy right now on many...</p>
														<span class="color">4 hours ago</span>
													</div>
												</a>
											</li>

											<!-- Notification -->
											<li class="notifications-not-read">
												<a href="#">
												<!-- <a href="dashboard-messages.html"> -->
													<span class="notification-avatar status-offline"><img src="/theme/user/hireo/images/user-avatar-small-02.jpg" alt=""></span>
													<div class="notification-text">
														<strong>Sindy Forest</strong>
														<p class="notification-msg-text">Hi Tom! Hate to break it to you, but I'm actually on vacation until...</p>
														<span class="color">Yesterday</span>
													</div>
												</a>
											</li>
										</ul>
									</div>
								</div>

								<a href="#" class="header-notifications-button ripple-effect button-sliding-icon">View All Messages<i class="icon-material-outline-arrow-right-alt"></i></a>
								<!-- <a href="dashboard-messages.html" class="header-notifications-button ripple-effect button-sliding-icon">View All Messages<i class="icon-material-outline-arrow-right-alt"></i></a> -->
							</div>
						</div>

					</div>
					<!--  User Notifications / End -->

					<!-- User Menu -->
					<div class="header-widget">

						<!-- Messages -->
						<div class="header-notifications user-menu">
							<div class="header-notifications-trigger">

								<a href="#"><div class="user-avatar status-online"><img src="<%= current_user.avatar_url %>" alt=""></div></a>
							</div>

							<!-- Dropdown -->
							<div class="header-notifications-dropdown">

								<!-- User Status -->
								<div class="user-status">

									<!-- User Name / Avatar -->
									<div class="user-details">
										<div class="user-avatar status-online"><img src="<%= current_user.avatar_url %>" alt=""></div>
										<div class="user-name">
											<%= current_user.full_name %> <span><%= current_user.type %></span>
										</div>
									</div>

									<!-- User Status Switcher -->
									<div class="status-switch" id="snackbar-user-status">

										<label class="user-online current-status"> <%= User.types[0] %></label>
										<label class="user-invisible"><%= User.types[1] %></label>
										<!-- Status Indicator -->
										<span class="status-indicator" aria-hidden="true"></span>
										<%= switch_user_select %>
									</div>
								</div>

								<ul class="user-menu-small-nav">
									<li><a href="#"><i class="icon-material-outline-dashboard"></i> Dashboard</a></li>
									<!-- <li><a href="dashboard.html"><i class="icon-material-outline-dashboard"></i> Dashboard</a></li> -->
									<li>
										<%= link_to my_subscription_users_path do %>
											<i class="icon-material-outline-settings"></i> Mon abonnement
										<% end %>
									</li>
									<li><%= link_to edit_user_registration_path  do %>
									<i class="icon-material-outline-settings"></i> Settings
									<% end %></li>

									<li>
										<%= link_to destroy_user_session_path, method: :delete do %>
											<i class="icon-material-outline-power-settings-new"></i> Logout
										<% end %>
									</li>
								</ul>

							</div>
						</div>

					</div>
					<!-- User Menu / End -->

				<% else %>

					<div class="header-widget">
						<%= link_to new_user_session_path,method: :get, class:"popup-with-zoom-anim log-in-button" do %>
						 	<i class="icon-feather-log-in"></i> <span><%= I18n.t('.header.sign_in_register') %></span>
						<% end %>
					</div>

				<% end %>

				<!-- Mobile Navigation Button -->
				<span class="mmenu-trigger">
					<button class="hamburger hamburger--collapse" type="button">
						<span class="hamburger-box">
							<span class="hamburger-inner"></span>
						</span>
					</button>
				</span>

			</div>

			<!-- Right Side Content / End -->

		</div>
	</div>
	<!-- Header / End -->

</header>
